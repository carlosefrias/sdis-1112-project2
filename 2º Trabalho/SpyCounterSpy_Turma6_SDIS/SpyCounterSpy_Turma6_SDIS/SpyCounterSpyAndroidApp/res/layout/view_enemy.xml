<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/LabelEnemyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <ImageView
        android:id="@+id/ViewEnemyImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/roman" />

    <TextView
        android:id="@+id/labelEnemyDefenseItemDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arma de Defesa"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/ViewEnemyDefenseDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição" />

    <TextView
        android:id="@+id/ViewEnemyAttackItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arma de Ataque"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/ViewEnemyItemDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/EnemyActBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.14"
            android:text="Voltar" />

        <Button
            android:id="@+id/buttonAtackHim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.82"
            android:text="Atacar" />

        <Button
            android:id="@+id/ViewEnemySair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.38"
            android:text="Sair" />

    </LinearLayout>

</LinearLayout>